# Environment Configuration Template
# Copy this file to .env and fill in your values
# For Railway deployment: Set these as environment variables in Railway dashboard

# Environment (production)
ENVIRONMENT=production

# Salesforce JWT Bearer Flow config
SALESFORCE_LOGIN_URL=https://test.salesforce.com
SALESFORCE_CLIENT_ID=YOUR_CONNECTED_APP_CONSUMER_KEY
SALESFORCE_USERNAME=your.user@company.com
SALESFORCE_JWT_KEY_PATH=/absolute/path/to/server.key

# Optional: default SOQL for quick tests
DEFAULT_TEST_SOQL=SELECT Id, Name FROM Account LIMIT 5

# Server settings
PORT=8000

# CORS - Comma-separated list; use * for all origins in development
CORS_ORIGINS=*

# Sentry DSN (optional - leave empty to disable error monitoring)
SENTRY_DSN=
